<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#fafafa"
    android:id="@+id/relativeLayout">

    <com.babble.chatMessenger.NonSwipeableViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/carouselText"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_height="100dp">
    </com.babble.chatMessenger.NonSwipeableViewPager>

    <com.babble.chatMessenger.NonSwipeableViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/carouselImage"
        android:layout_width="260dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp">
    </com.babble.chatMessenger.NonSwipeableViewPager>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/carouselImage">

        <Button
            android:id="@+id/login_sign_in_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:hapticFeedbackEnabled="true"
            android:background="#2196f3"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="44px"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="AGREE AND CONTINUE"
            android:bottomRightRadius="5dp"
            android:bottomLeftRadius="5dp"
            android:layout_marginTop="50dp"
            android:topLeftRadius="5dp"
            android:topRightRadius="5dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noAccount"
            android:text="Tap Agree and Continue to accept the "
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signinlink"
            android:text="Babble's Terms of Service and Privacy Policy"
            android:textSize="14sp"
            android:textColor="#2196f3"
            android:textAlignment="center"
            android:hapticFeedbackEnabled="true"
            android:layout_below="@+id/noAccount"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>